{% extends 'base-admin.html.twig' %}

{% block body %}
    <h1>Lista de Clientes</h1>

    <div class="pull-right botoes">
    <a href="{{ path('cliente_new') }}" class="btn btn-primary ">Cadastrar Novo</a>
    </div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Cpf</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'cpf': cliente.cpf }) }}">{{ cliente.cpf }}</a></td>
                <td>{{ cliente.nome }}</td>
                <td>{{ cliente.telefone }}</td>
                <td>
                        <a href="{{ path('cliente_edit', { 'id': cliente.cpf }) }}">
                        <span class="glyphicon glyphicon-pencil"></span> editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
