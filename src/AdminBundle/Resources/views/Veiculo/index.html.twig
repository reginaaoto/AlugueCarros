{% extends 'base-admin.html.twig' %}


{% block body %}

    <h1>Lista de Veiculo</h1>
    
    <div class="pull-right botoes">
    <a href="{{ path('veiculo_new') }}" class="btn btn-primary ">Cadastrar Novo</a>
    </div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Ano</th>
                <th>Cor</th>
                <th>Categoria</th>
                <th>Cidade</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for veiculo in veiculos %}
            <tr>
                <td><a href="{{ path('veiculo_show', { 'id': veiculo.id }) }}">{{ veiculo.id }}</a></td>
                <td>{{ veiculo.marca }}</td>
                <td>{{ veiculo.modelo }}</td>
                <td>{% if veiculo.ano %}{{ veiculo.ano|date('Y-m-d') }}{% endif %}</td>
                <td>{{ veiculo.cor }}</td>
                <td>{{ veiculo.categoria }}</td>
                <td>{{ veiculo.cidade }}</td>
                <td>
                    
                    <a href="{{ path('veiculo_edit', { 'id': veiculo.id }) }}">
                        <span class="glyphicon glyphicon-pencil"></span> editar</a>
                        
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            
{% endblock %}
